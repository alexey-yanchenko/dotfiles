[user]
	email = your.elkin@gmail.com
	name = Alexey Yanchenko
[push]
	default = current
[pull]
	default = current
[core]
	excludesfile = ~/.gitignore_global
[alias]
  br   = branch
  ci   = commit
  co   = checkout
  last = log -1 HEAD
  lg   = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  st   = status
[gitflow]
  multi-hotfix = true
[gitflow "branch"]
  master  = master
  develop = develop
[gitflow "prefix"]
  feature = feature/
  bugfix  = bugfix/
  release = release/
  hotfix  = hotfix/
  support = support/
[gitflow "feature.start"]
  fetch = true
[gitflow "feature.finish"]
  fetch = true
[gitflow "hotfix.start"]
  fetch = true
[gitflow "hotfix.finish"]
  fetch = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
