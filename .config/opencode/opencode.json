{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "ls *": "allow",
      "find *": "allow",
      "head *": "allow",
      "grep *": "allow",
      "cat *": "allow",
    }
  },
   "provider": {
    "routerai": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "RouterAI",
      "options": {
        "baseURL": "https://routerai.ru/api/v1",
        "setCacheKey": true
      },
      "models": {
        "anthropic/claude-sonnet-4.6": { "name": "Claude Sonnet 4.6" },
        "anthropic/claude-opus-4.6": { "name": "Claude Opus 4.6" },
        "z-ai/glm-4.7": { "name": "GLM 4.7" },
        "z-ai/glm-5": { "name": "GLM 5" },
      }
    },
    "cliproxy": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "CLIProxy",
      "options": {
        "baseURL": "https://vibecoding.bot.nu/v1",
        "setCacheKey": true,
      },
      "models": {
        "anthropic/claude-sonnet-4.6": { "name": "Claude Sonnet 4.6" },
        "anthropic/antigravity-sonnet-4.6": { "name": "Antigravity Sonnet 4.6" },
        "anthropic/claude-opus-4.6": { "name": "Claude Opus 4.6" },
        "z-ai/glm-5": { "name": "GLM 5" },
        "z-ai/glm-4.7": { "name": "GLM 4.7" },
      }
    },
  }
}
