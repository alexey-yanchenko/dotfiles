{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "ls*": "allow",
      "find*": "allow",
      "head*": "allow",
      "*": "ask"
    }
  },
   "provider": {
    "routerai": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "RouterAI",
      "options": {
        "baseURL": "https://routerai.ru/api/v1",
        "setCacheKey": true
      },
      "models": {
        "anthropic/claude-sonnet-4.5": { "name": "Claude Sonnet 4.5" } // Define the models available
      }
    },
    "cliproxy": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "CLIProxy",
      "options": {
        "baseURL": "https://vibecoding.bot.nu/v1",
        "setCacheKey": true,
      },
      "models": {
        "anthropic/claude-sonnet-4.5": { "name": "Claude Sonnet 4.5" },
        "anthropic/claude-opus-4.6": { "name": "Claude Opus 4.6" },
      }
    },
  }
}
